pipeline{
    agent {
        docker { image 'hashicorp/middleman-hashicorp'}
        }
    stages{
        stage('Setup'){
            steps{
                script{
                    dir ('external-docs'){
                        echo "External documentation work in progress"
                        sh "pwd"
                        sh "ls -la"
                    }
                }
            }
        }
        stage('Documentation'){
            steps{
                script{
                    dir ('external-docs'){
                        sh NO_CONTRACTS=true 'bundle exec middleman build html docs docs/_build/html' [--clean]
                        }
                    }
                    stash name: 'docs', includes: '**/docs/_build/html/**/*'
                }
            }
        }
    }