pipeline {
    agent {
        dockerfile { 
            dir 'external-docs'
            args '-u root'
            reuseNode true
        }
    }
    stages {
        stage('Documentation') {
            steps {
                script {
                        dir ('external-docs'){
                            sh 'bundle install'
                            sh 'bundle exec middleman build'
                        }
                        stash name: 'docs', includes: '**/build/**'
                }
            }
        }
    }
}