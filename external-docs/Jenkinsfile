pipeline{
    agent {
        docker { image 'hashicorp/middleman-hashicorp'}
        args
        }
    stages{
        stage('Setup'){
            steps{
                script{
                    dir ('external-docs'){
                        echo "External documentation work in progress"
                        sh "pwd"
                        sh "ls -la"
                        echo "Setting up poetry"
                        sh "poetry install"
                        sh "poetry middleman build"
                    }
                }
            }
        }
        stage('Documentation'){
            steps{
                script{
                    dir ('external-docs'){
                        sh "poetry middleman deploy ./ \"setup*\" \"csvwlib/external-docs/my-project\""
                        }
                    }
                    stash name: 'docs', includes: '**/docs/_build/html/**/*'
                }
            }
        }
    }
}